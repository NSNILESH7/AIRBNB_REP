<%-layout("layouts/boilerplate" )%>
<div class="row">
  <div class="col-8 offset-2">
    <br /><br />
    <h3>Create New Listings</h3>
    <form action="/listings" method="post" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          type="text"
          placeholder="Add a catchy title"
          name="listing[title]"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Give a valid Title name!</div>
      </div>
      <div class="mb-3">
        <label for="Deceription" class="form-label">Description</label>
        <textarea
          type="text"
          placeholder="enter description"
          name="listing[description]"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Give a valid description!</div>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Image Link</label
        ><input
          type="text"
          placeholder="enter image"
          name="listing[image]"
          class="form-control"
        />
      </div>
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="Price" class="form-label">price</label
          ><input
            type="text"
            placeholder="799"
            name="listing[price]"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Give a valid price!</div>
        </div>
        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">Country</label
          ><input
            type="text"
            placeholder="india"
            name="listing[country]"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Give a valid country name!</div>
        </div>
      </div>

      <div class="mb-3">
        <label for="location" class="form-label">Location</label
        ><input
          type="text"
          placeholder="location"
          name="listing[location]"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Give a valid location name!</div>
      </div>
      <br />
      <button class="btn btn-dark add-btn">Add</button>
    </form>
  </div>
</div>
